# Docker环境配置
NODE_ENV=production

# 端口配置
FRONTEND_PORT=3000
BACKEND_PORT=3001

# 前后端URL
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# 数据库配置
DATABASE_URL=file:/app/data/sqlite.db

# JWT密钥（Docker环境，请修改）
JWT_SECRET=docker_secret_key_please_change
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=defaultpassword

# Docker特定配置
DOCKER=true
HEALTHCHECK_PORT=3001