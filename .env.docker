# Docker Compose 生产环境变量配置
# 请根据您的实际部署情况修改这些值

# 节点环境
NODE_ENV=production

# 应用端口配置
FRONTEND_PORT=3000
BACKEND_PORT=3001

# 前后端URL配置（请根据实际域名/IP修改）
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# 重要：前端API地址配置（客户端访问的API地址）
# 使用Nginx反向代理时，使用相对路径即可
# 如果不使用Nginx，需要修改为实际的API地址
NEXT_PUBLIC_API_URL=/api

# 数据库配置
DATABASE_URL=file:/app/data/sqlite.db

# JWT配置（请修改为强密码）
JWT_SECRET=your_strong_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info

# Redis配置
REDIS_HOST=192.168.123.5
REDIS_PORT=6379
REDIS_PASSWORD=bdtdhc6DizYQYbEZ
REDIS_URL=redis://:bdtdhc6DizYQYbEZ@192.168.123.5:6379

# PostgreSQL配置（可选）
POSTGRES_ENABLED=false
POSTGRES_DB=meow_accounting
POSTGRES_USER=meow
POSTGRES_PASSWORD=meow_password

# 监控配置（可选）
GRAFANA_PASSWORD=admin

# Docker特定配置
DOCKER=true
HEALTHCHECK_PORT=3001