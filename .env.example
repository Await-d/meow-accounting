# 应用配置
NODE_ENV=production

# 端口配置
FRONTEND_PORT=3000
BACKEND_PORT=3001

# 前后端URL
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# 数据库配置
DATABASE_URL=file:/app/data/sqlite.db

# JWT密钥 (生产环境请更改为强密钥)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info

# Redis配置 (如果使用)
# REDIS_URL=redis://localhost:6379 